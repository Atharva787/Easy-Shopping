<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homepage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#03A9F4"
    android:gravity="center"
    tools:context=".home">

    <Button
        android:id="@+id/logout"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@id/cart"
        android:background="#F80C0C"
        android:drawableLeft="@drawable/ic_action_logout"
        android:onClick="logout"
        android:text="Log Out"
        app:layout_constraintBottom_toBottomOf="@+id/cart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cart"
        app:layout_constraintTop_toTopOf="@+id/cart"
        android:layout_toEndOf="@id/cart"
        android:drawableStart="@drawable/ic_action_logout"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/name"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="0dp"
        android:autofillHints=""
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#0E0E0E"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/cart"
        app:layout_constraintEnd_toStartOf="@+id/cart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cart" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_below="@id/name"
        android:background="#F1EDED"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:focusable="true">

        <TableRow
            android:layout_height="300dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:gravity="top">

                <ImageView
                    android:id="@+id/mob"
                    android:layout_width="200dp"
                    android:layout_height="240dp"
                    android:layout_above="@id/mobc"
                    android:background="#FFFFFF"
                    android:clickable="true"
                    android:onClick="mob"
                    android:padding="10dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/mobile"
                    tools:ignore="MissingConstraints"
                    android:focusable="true"/>

                <TextView
                    android:id="@+id/mobc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:onClick="mob"
                    android:text="Mobile"
                    android:textColor="#D30909"
                    android:textSize="25sp"
                    app:drawableTint="#FF9800"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="HardcodedText,MissingConstraints"
                    tools:layout_editor_absoluteY="250dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:gravity="top">

                <ImageView
                    android:id="@+id/lap"
                    android:layout_width="200dp"
                    android:layout_height="240dp"
                    android:layout_above="@id/lapc"
                    android:background="#FFFFFF"
                    android:clickable="true"
                    android:onClick="lap"
                    android:padding="10dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/laptop"
                    tools:ignore="MissingConstraints"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/lapc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:onClick="lap"
                    android:text="Laptop"
                    android:textColor="#D30909"
                    android:textSize="25sp"
                    app:drawableTint="#FF9800"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="HardcodedText,MissingConstraints"
                    tools:layout_editor_absoluteY="250dp" />
            </RelativeLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="327dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:gravity="top">

                <ImageView
                    android:id="@+id/mob_acc"
                    android:layout_width="200dp"
                    android:layout_height="240dp"
                    android:layout_above="@id/mob_accc"
                    android:background="#FFFFFF"
                    android:clickable="true"
                    android:onClick="mob_acc"
                    android:padding="10dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/mobile_accessories"
                    tools:ignore="MissingConstraints"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/mob_accc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="-3dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:onClick="mob_acc"
                    android:text="Mobile\n Accessories"
                    android:textColor="#D30909"
                    android:textSize="25sp"
                    app:drawableTint="#FF9800"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="HardcodedText,MissingConstraints"
                    tools:layout_editor_absoluteY="250dp" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:gravity="top">

                <ImageView
                    android:id="@+id/lap_acc"
                    android:layout_width="200dp"
                    android:layout_height="240dp"
                    android:layout_above="@id/lap_accc"
                    android:background="#FFFFFF"
                    android:clickable="true"
                    android:onClick="lap_acc"
                    android:padding="10dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/laptop_accessories"
                    tools:ignore="MissingConstraints"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/lap_accc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="0dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_horizontal"
                    android:onClick="lap_acc"
                    android:text="Laptop\n Accessories"
                    android:textColor="#D30909"
                    android:textSize="25sp"
                    app:drawableTint="#FF9800"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="HardcodedText,MissingConstraints"
                    tools:layout_editor_absoluteY="249dp" />

            </RelativeLayout>

        </TableRow>

    </TableLayout>


    <ImageButton
        android:id="@+id/cart"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginLeft="0dp"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="0dp"
        android:layout_toRightOf="@id/name"
        android:background="#ECDD94"
        android:onClick="cart"
        android:tint="#F44336"
        app:layout_constraintEnd_toStartOf="@+id/logout"
        app:layout_constraintStart_toEndOf="@+id/name"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_action_cart"
        tools:ignore="VectorDrawableCompat"
        android:layout_toEndOf="@id/name" />

</RelativeLayout>